<div class="banner">
  <div class="container text-center">
    <h1><strong>Save any kind of movies</strong></h1>
  </div>
</div>

<div class="container">
  <div class="flex flex-row vh-100 mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2>Movies lists</h1>
      </div>
      <div>
        <%= link_to "Create a new list", new_list_path, class: "btn btn-success border-radius" %>
      </div>
    </div>
    <div class="d-flex flex-wrap justify-content-start">
      <% @lists.each do |list| %>
      <div class="d-flex flex-column ms-4 mx-2 mb-4 shadow border">
        <% if list.photo.key %>
          <%= link_to cl_image_tag(list.photo.key, height: 200, width: 300, crop: :fill), list_path(list) %>
        <% else %>
          <%= link_to image_tag('pexels-jeshootscom-1040159.jpeg', size: "300x200", position: "relative"), list_path(list)%>
        <% end %>
        <div class="d-flex justify-content-center">
          <div class="d-flex justify-content-center align-items-center">
            <p class="list-name mt-3"><strong><%= list.name.capitalize %></strong></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>
